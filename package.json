{
	"name": "charset-detector",
	"displayName": "charset-detector",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:charset-detector.enableHighlight",
		"onCommand:charset-detector.enableWorkspaceDiagnostics"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "charset-detector.enableHighlight",
				"title": "Highlight lines with Chinese words"
			},
			{
				"command": "charset-detector.disableHighlight",
				"title": "Disable highlight of lines with Chinese words"
			},
			{
				"command": "charset-detector.enableWorkspaceDiagnostics",
				"title": "Enable workspace detection"
			},
			{
				"command": "charset-detector.disableWorkspaceDiagnostics",
				"title": "Disable workspace detection"
			},
			{
				"command": "charset-detector.createLocaleMessage",
				"title": "Disable workspace detection"
			}
		],
		"keybindings": [
			{
				"command": "charset-detector.enableHighlight",
				"key": "ctrl+shift+f",
				"mac": "cmd+shift+f",
				"when": "editorTextFocus"
			},
			{
				"command": "charset-detector.disableHighlight",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorTextFocus"
			},
			{
				"command": "charset-detector.createLocaleMessage",
				"key": "ctrl+shift+c",
				"mac": "cmd+shift+c",
				"when": "editorTextFocus"
			}
		],
		"configuration": [
			{
				"title": "Charset-detector",
				"properties": {
					"charset-detector.directory": {
						"type": "string",
						"default": "",
						"description": "Choose a root directory to detect."
					},
					"charset-detector.extensions": {
						"type": "array",
						"default": [],
						"description": "Specify which file to detect."
					},
					"charset-detector.ignore": {
						"type": "array",
						"default": [],
						"description": "Files or folders to ignore."
					},
					"charset-detector.wordlib.en": {
						"type": "string",
						"default": "",
						"description": ""
					},
					"charset-detector.wordlib.zh": {
						"type": "string",
						"default": "",
						"description": ""
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
